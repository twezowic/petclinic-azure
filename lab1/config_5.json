{
    "resource_group": "wus_1_5",
    "network": {
        "address_prefix": "10.0.0.0/16"
    },
    "network_security_group": [
        {
            "name": "frontendNSG",
            "rule": [
                {
                    "name": "frontRule",
                    "priority": 1000,
                    "source_address_prefixes": "*",
                    "source_port_ranges": "*",
                    "destination_address_prefixes": "*",
                    "destination_port_ranges": "8080-8081"
                }
            ]
        },
        {
            "name": "backendNSG",
            "rule": [
                {
                    "name": "backendRule",
                    "priority": 1000,
                    "source_address_prefixes": "*",
                    "source_port_ranges": "*",
                    "destination_address_prefixes": "*",
                    "destination_port_ranges": "8080-8081"
                }
            ]
        },
        {
            "name": "databaseNSG",
            "rule": [
                {
                    "name": "databaseRule",
                    "priority": 1000,
                    "source_address_prefixes": "10.0.0.0/16",
                    "source_port_ranges": "*",
                    "destination_address_prefixes": "*",
                    "destination_port_ranges": 3306
                }
            ]
        }
    ],
    "subnet": [
        {
            "name": "frontendSubnet",
            "address_prefix": "10.0.1.0/24",
            "network_security_group": "frontendNSG"
        },
        {
            "name": "backendSubnet",
            "address_prefix": "10.0.2.0/24",
            "network_security_group": "backendNSG"
        },
        {
            "name": "databaseSubnet",
            "address_prefix": "10.0.3.0/24",
            "network_security_group": "databaseNSG"
        }
    ],
    "public_ip": [
        {
            "name": "front"
        }
    ],
    "virtual_machine": [
        {
            "name": "databaseMasterVM",
            "subnet": "databaseSubnet",
            "private_ip_address": "10.0.3.10",
            "public_ip_address": ""
        },
        {
            "name": "databaseSlaveVM",
            "subnet": "databaseSubnet",
            "private_ip_address": "10.0.3.11",
            "public_ip_address": ""
        },
        {
            "name": "backendVM",
            "subnet": "backendSubnet",
            "private_ip_address": "10.0.2.10",
            "public_ip_address": ""
        },
        {
            "name": "frontendVM",
            "subnet": "frontendSubnet",
            "private_ip_address": "10.0.1.10",
            "public_ip_address": "front"
        }
    ],
    "scripts": [
        {
            "type": "database-master",
            "vname": "databaseMasterVM",
            "port": 3306,
            "user": "user",
            "password": "password"
        },
        {
            "type": "database-slave",
            "vname": "databaseSlaveVM",
            "port": 3306,
            "user": "user",
            "password": "password",
            "master_address": "10.0.3.10",
            "master_port": 3306
        },
        {
            "type": "backend",
            "vname": "backendVM",
            "port": 8080,
            "database_ip": "10.0.3.10",
            "database_port": 3306,
            "database_user": "user",
            "database_password": "password"
        },
        {
            "type": "backend",
            "vname": "backendVM",
            "port": 8081,
            "database_ip": "10.0.3.10",
            "database_port": 3306,
            "database_user": "user",
            "database_password": "password"
        },
        {
            "type": "nginx",
            "vname": "frontendVM",
            "port": 8081,
            "backend_address": "10.0.2.10",
            "backend_ports": [8080, 8081]
        },
        {
            "type": "frontend",
            "vname": "frontendVM",
            "port": 8080,
            "backend_address": "front",
            "backend_port": 8081
        }
    ]
}